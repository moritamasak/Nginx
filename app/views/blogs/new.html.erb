<%= form_with(model: Blog.new, local: true) do |form| %>
<h1>ブログ作成画面</h1>
  <div class="blog_title">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div class="blog_content">
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>
  <%= form.submit %>
<% end %>
  <%= link_to 'ブログ一覧画面に戻る', blogs_path %>